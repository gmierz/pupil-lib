{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "standard": {
            "format": "[%(asctime)s] [PID:%(process)d TID:%(thread)d] [%(levelname)s] %(message)s"
        }
    },
    "handlers": {
        "default": {
            "level":"INFO",
            "formatter": "standard",
            "class":"logging.handlers.RotatingFileHandler",
            "filename": "core/logs/log",
            "maxBytes": 90000000,
            "backupCount": 40
        },
        "stdout": {
            "level": "INFO",
            "formatter": "standard",
            "class": "logging.StreamHandler"
        }
    },
    "loggers": {
        "": {
            "handlers": ["default"],
            "level": "NOTSET",
            "propagate": false
        }
    }
}